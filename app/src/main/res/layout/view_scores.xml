<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☀️ Xem điểm sinh viên"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F57C00"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Môn học -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học:"
                android:textSize="18sp"
                android:textColor="#E65100"
                android:layout_marginEnd="10dp" />

            <Spinner
                android:id="@+id/spinnerMonHoc_Xem"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4FC3F7"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Nhập mã sinh viên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/editMaSV_Xem"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Nhập mã sinh viên"
                android:textSize="18sp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@android:drawable/editbox_background"
                android:textColor="#01579B" />
        </LinearLayout>

        <!-- Thông tin điểm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E1F5FE"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textHoTen_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên:"
                android:textSize="20sp"
                android:textColor="#F57C00"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textMonHoc_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học:"
                android:textSize="20sp"
                android:textColor="#F57C00"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textDiemQT_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm quá trình:"
                android:textSize="20sp"
                android:textColor="#0288D1"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textDiemGK_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm giữa kỳ:"
                android:textSize="20sp"
                android:textColor="#0288D1"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textDiemCK_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm cuối kỳ:"
                android:textSize="20sp"
                android:textColor="#0288D1"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textDiemTK_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm tổng kết:"
                android:textSize="20sp"
                android:textColor="#0288D1"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textTrangThai_Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"
                android:textSize="20sp"
                android:textColor="#D84315" />
        </LinearLayout>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonXemDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☀️ Xem điểm"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFB300"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="16dp"
                android:elevation="3dp" />

            <Button
                android:id="@+id/buttonQuayLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌊 Quay lại"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#29B6F6"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:elevation="3dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
